package jungol;

import java.util.Scanner;

public class Test551 {

	public static void main(String[] args) {
		// 551:반복제어문3 - 자가진단4
		// 문제 : 자연수 n을 입력받아서 다음과 같이 출력하는 프로그램을 작성하시오.
		// 입력 예 : 3
//		출력 예
//		***
//		 **
//		  *
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		
		for( int i = 0; i < n; i++ ) {
			for( int j = 0; j < n; j++) {
				if(i > j) {
					System.out.println("");
				}else{
					System.out.println("*");
				}
				System.out.print("*");
			}System.out.println("");
		}
		
	
	}

}
